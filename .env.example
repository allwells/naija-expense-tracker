# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database (Supabase direct connection string)
# Get this from Supabase Dashboard -> Project Settings -> Database -> Connection string -> URI
# Mode: Transaction (port 6543) or Session (port 5432) - Session preferred for migrations
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# better-auth
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=replace-with-secure-random-string
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Exchange Rate API (exchangerate-api.com free tier)
EXCHANGE_RATE_API_KEY=your-api-key-here

# Admin Credentials
ADMIN_NAME='your_name'
ADMIN_EMAIL=your_email
ADMIN_PASSWORD=your_password
